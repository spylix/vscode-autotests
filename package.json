{
  "name": "autotests",
  "displayName": "Auto Unit Tests",
  "description": "Run JavaScript unit tests from VSCode",
  "version": "0.0.1",
  "license": "MIT",
  "author": "Pawe≈Ç Stepaniuk",
  "engines": {
    "vscode": "^1.71.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spylix/vscode-autotests.git"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:autotests.runTests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "AutoTests",
      "properties": {
        "autotests.testCommand": {
          "type": "string",
          "default": "yarn test",
          "description": "The command that will run the tests for a specific file, by default yarn test."
        }
      }
    },
    "commands": [
      {
        "command": "autotests.runTests",
        "icon": "$(debug-alt)",
        "title": "Test"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "activeEditor",
          "command": "autotests.runTests",
          "alt": "autotests.runTests",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "@vscode/test-electron": "^2.1.5"
  }
}
